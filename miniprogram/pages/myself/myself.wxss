page {
  height: 100%;
  background-color: #f0f0f0;
}

.b_g_c_img {
  width: 100%;
}

.b_g_c_img image {
  width: 100%;
}

.user_info_list_view {
  position: relative;
}


/* 登录框 */
.user_info_list {
  width: 90%;
  background-color: #fff;
  position: absolute;
  top: -20px;
  left: 5%;
  border-radius: 10px;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
  padding: 10px 0;
}

.user_login {
  margin: 10px 0;
  text-align: center;
}

.user_login_picture {
  width: 100px;
  height: 100px;
  background-color: #f0f0f0;
  border-radius: 50%;
  display: flex;
  justify-content: center;
  align-items: center;
  overflow: hidden;
}

.user_login_picture image {
  width: 50px;
  height: 50px;
}

.login_success image {
  width: 100%;
  height: 100%;
}

.user_info{
  width: 90%;
}

.user_info view {
  padding: 10px 0;
  border-bottom: 1px solid #f0f0f0;
}