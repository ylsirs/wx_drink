page {
  height: 100%;
  background-color: #f0f0f0;
}

.container {
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
}

.Login {
  background-color: #fff;
  padding: 20px;
  margin-bottom: 100px;
  border-radius: 10px;
  display: flex;
  flex-direction: column;
}

.Login_title {
  font-size: 20px;
  margin: 0 auto;
  font-family: "楷体";
  font-weight: bold;
}

.Login_login {
  display: flex;
  margin-top: 20px;
}

.Login_login input {
  border: 1px solid #c7c3c3;
  padding-left: 5px;
}

.Login_btn {
  margin-top: 20px;
}